{
  "comments": {
    "blockComment": ["{% comment %}", "{% endcomment %}"]
  },
  "brackets": [
    ["{%", "%}"],
    ["{{", "}}"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{%", "close": " %}" },
    { "open": "{{", "close": " }}" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "'", "close": "'" },
    { "open": "\"", "close": "\"" }
  ],
  "surroundingPairs": [
    ["{%", "%}"],
    ["{{", "}}"],
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*{%-?\\s*(if|unless|else|elsif|case|for|cycle|capture|block|raw|tablerow|paginate)\\b",
    "decreaseIndentPattern": "^\\s*{%-?\\s*(endif|endunless|else|elsif|endcase|endfor|endcycle|endcapture|endblock|endraw|endtablerow|endpaginate)\\b"
  }
}